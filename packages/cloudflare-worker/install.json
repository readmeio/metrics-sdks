{
  "$schema": "http://json.schemastore.org/install",
  "workers": [
    {
      "src": "./dist/main.js"
    }
  ],
  "options": {
    "properties": {
      "account": {
        "title": "Readme Account",
        "type": "object",
        "format": "account",
        "services": ["Readme"],
        "order": 0,
        "description": "Login with your Readme account to get your project API key.",
        "required": true
      },
      "routes": {
        "title": "Routes",
        "type": "array",
        "description": "List of routes to pattern match incoming requests against. Prefix URIs with HTTP or HTTPS.",
        "items": {
          "title": "Route",
          "type": "string",
          "format": "url",
          "placeholder": "https://www.example.com/api/*"
        }
      }
    }
  },
  "hooks": [
    {
      "endpoint": "https://oauthreq.readme.io/redirect",
      "events": ["oauth-login", "account-logout"],
      "block": true,
      "authenticate": ["account"],
      "failure": {
        "action": "notify",
        "message": "There was an error communicating with Readme."
      }
    },
    {
      "events": ["account-logout"],
      "action": "reset-schema"
    }
  ]
}
