{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["es2019"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "src/.api/**/*",
    // We have to explicitly list these config files
    // due to the dynamic require in certain envs
    "src/config/*.json"
  ]
}
