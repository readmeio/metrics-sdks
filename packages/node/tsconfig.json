{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/.api/**/*",
    // We have to explicitly list these config files
    // due to the dynamic require in certain envs
    "src/config/*.json"
  ]
}
