<?xml version="1.0"?>
<ruleset>
    <description>ReadMe coding standards</description>
    <arg name="colors" />

    <exclude-pattern>examples/*/bootstrap/cache</exclude-pattern>
    <exclude-pattern>examples/*/storage</exclude-pattern>
    <exclude-pattern>examples/*/vendor</exclude-pattern>

    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>examples/laravel/public/index.php</exclude-pattern>
    </rule>

    <rule ref="PSR12" />
    <rule ref="Squiz.Strings.DoubleQuoteUsage" />
</ruleset>
