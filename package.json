{
  "name": "metrics-sdks-monorepo",
  "private": true,
  "scripts": {
    "clean": "npx lerna clean",
    "lint": "eslint . && npm run lint --workspaces",
    "prepare": "husky install",
    "publish": "npx lerna publish",
    "test": "npm test --workspaces",
    "test:integration-metrics": "NODE_OPTIONS=--experimental-vm-modules npx jest __tests__/integration.test.js",
    "test:integration-webhooks": "NODE_OPTIONS=--experimental-vm-modules npx jest __tests__/integration-webhooks.test.js",
    "version": "npx conventional-changelog-cli --pkg lerna.json -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/metrics-sdks.git"
  },
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "./packages/node"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@readme/eslint-config": "^9.0.0",
    "caseless": "^0.12.0",
    "eslint": "^8.14.0",
    "get-port": "^6.1.2",
    "husky": "^7.0.2",
    "jest": "^27.5.1",
    "prettier": "^2.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "transform": {},
    "testMatch": [
      "<rootDir>/__tests__/**/*.[jt]s?(x)",
      "<rootDir>/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "type": "module",
  "prettier": "@readme/eslint-config/prettier"
}
